set -e

LMODE=/lib/udev/lmt-udev

[ -x "${LMODE}" ] || exit 0

if [ "${1}" = "start" ]; then
    ${LMODE} auto
elif [ "${1}" = "resume" ] && [ "${2}" != "standby" ]; then
    ${LMODE} auto
elif [ "${1},${2}" = "change,power" ]; then
    ${LMODE} auto
elif [ "${1}" = "stop" ]; then
    ${LMODE} stop

fi
exit 0
